<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.example.administrator.courtcounter.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Team 1:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fa8d8d"
                android:background="#00FFFF"
                android:textSize="20sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />


            <EditText
                android:hint="Team Name"
                android:inputType="text"
                android:imeOptions = "actionDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fa8d8d"
                android:background="#00FFFF"
                android:textSize="35sp"
                android:paddingTop="0dp"
                android:paddingBottom="12dp"
                android:id="@+id/teamName1" />

            <TextView
                android:text="Score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#0000ff"
                android:background="#FFFF00"
                android:textSize="28sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/textViewAdd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#00FF00"
                android:background="#ff99ff"
                android:textStyle="bold"
                android:textSize="40sp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"/>

            <Button
                android:text="+1 Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickAdd1"
                android:id="@+id/button" />

            <Button
                android:text="-1 Point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="clickSub1"
                android:id="@+id/button2" />
        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:text="Team 2:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#00FFFF"
            android:background="#6eff0000"
            android:textSize="20sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <EditText
            android:hint="Team Name"
            android:inputType="text"
            android:imeOptions = "actionDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#00FFFF"
            android:background="#6eff0000"
            android:textSize="35sp"
            android:paddingTop="0dp"
            android:paddingBottom="12dp"
            android:id="@+id/teamName2" />

        <TextView
            android:text="Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFF00"
            android:background="#0000ff"
            android:textSize="28sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <TextView
            android:id="@+id/textViewAdd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF99FF"
            android:background="#00FF00"
            android:textStyle="bold"
            android:textSize="40sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <Button
            android:text="+1 Point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickAdd2"/>

        <Button
            android:text="-1 Point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickSub2"/>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="36dp"
            android:text="Game Over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickGameOver"/>
    </LinearLayout>

</LinearLayout>